{
  "name": "{{ basic.worker_name }}",
  "version": "{{ metadata.version }}",
  "description": "Cloudflare Email Worker for Email-to-SMS routing via Twilio",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "check": "tsc --noEmit",
    "test": "vitest",
    "tail": "wrangler tail",
    "kv:create": "wrangler kv:namespace create RATE_LIMIT_KV",
    "secret:twilio-sid": "wrangler secret put TWILIO_ACCOUNT_SID",
    "secret:twilio-token": "wrangler secret put TWILIO_AUTH_TOKEN",
    "secret:twilio-phone": "wrangler secret put TWILIO_PHONE_NUMBER"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "email-routing",
    "sms",
    "twilio",
    "email-to-sms"
  ],
{% if metadata.author %}
  "author": "{{ metadata.author }}",
{% endif %}
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@cloudflare/vitest-pool-workers": "^0.10.7",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0",
    "wrangler": "^4.48.0"
  },
  "dependencies": {
    "mimetext": "^3.0.0"
  }
}
