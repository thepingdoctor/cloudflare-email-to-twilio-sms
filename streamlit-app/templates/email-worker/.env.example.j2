# Cloudflare Email Worker - Environment Variables
#
# DO NOT commit this file with actual values!
# Use wrangler secrets for production:
#   wrangler secret put TWILIO_ACCOUNT_SID
#   wrangler secret put TWILIO_AUTH_TOKEN
#   wrangler secret put TWILIO_PHONE_NUMBER

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Domain Configuration
EMAIL_DOMAIN={{ basic.domain }}
EMAIL_PATTERN={{ routing.email_routing_pattern }}

{% if rate_limit.enabled %}
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_SENDER={{ rate_limit.per_sender }}
RATE_LIMIT_PER_RECIPIENT={{ rate_limit.per_recipient }}
{% endif %}

{% if logging.enabled %}
# Logging
LOGGING_ENABLED=true
LOG_LEVEL={{ logging.log_level }}
{% endif %}

# Worker Metadata
WORKER_NAME={{ basic.worker_name }}
WORKER_VERSION={{ metadata.version }}
